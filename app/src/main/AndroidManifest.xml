<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="la.applica.ubiquo" >

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="17"/> // Asegura que la aplicacion no se instalara en versiones anteriores a la "17"
    <uses-permission android:name="android.permission.INTERNET"/> // Nos dará acceso a internet en la aplicación
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/> // GCM requiere una cuenta de Google configurada en el dispositivo
    <uses-permission android:name="android.permission.WAKE_LOCK"/> // Necesario para utilizar un determinado tipo de broadcast receiver
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/> // Permitirá que la aplicación se registre y reciba mensajes de GCM

    // Aseguran que sólo nosotros podremos recibir los mensajes de nuestra aplicación
    <permission android:name="la.applica.ubiquo.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="la.applica.ubiquo.permission.C2D_MESSAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="la.applica.ubiquo" />
            </intent-filter>
        </receiver>

        <service android:name=".GcmIntentService" />


    </application>

</manifest>
