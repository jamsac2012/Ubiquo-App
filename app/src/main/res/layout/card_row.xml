<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="2dp"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"
            android:id="@+id/img_ubiquo"
            android:src="@drawable/ubiquo36"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Titulo"
            android:id="@+id/tv_titulo"
            android:textColor="@color/accent_material_light"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img_ubiquo"
            android:layout_toEndOf="@+id/img_ubiquo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuerpo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tv_cuerpo"
            android:layout_below="@+id/tv_titulo"
            android:layout_alignLeft="@+id/tv_titulo"
            android:layout_alignStart="@+id/tv_titulo"
            android:textColor="@color/secondary_text_default_material_light"
            android:layout_above="@+id/tv_text_pagina" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:text="Date"
            android:textSize="10dp"
            android:id="@+id/tv_date"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/tv_cuerpo"
            android:textColor="@color/primary_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/text_url"
            android:id="@+id/tv_text_pagina"
            android:textColor="@color/primary_color"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_cuerpo"
            android:layout_alignStart="@+id/tv_cuerpo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_url"
            android:textColor="#ffb6b4b5"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_text_pagina"
            android:layout_toEndOf="@+id/tv_text_pagina" />


    </RelativeLayout>


</android.support.v7.widget.CardView>
