<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="3dp"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"
            android:id="@+id/img_ubiquo"
            android:src="@drawable/ubiquo36"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Titulo"
            android:id="@+id/tv_titulo"
            android:textStyle="bold"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:layout_below="@+id/tv_remite"
            android:layout_alignLeft="@+id/tv_remite"
            android:layout_alignStart="@+id/tv_remite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuerpo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tv_cuerpo"
            android:textColor="@color/secondary_text_default_material_light"
            android:layout_below="@+id/tv_titulo"
            android:layout_alignLeft="@+id/tv_titulo"
            android:layout_alignStart="@+id/tv_titulo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:text="Date"
            android:textSize="10dp"
            android:id="@+id/tv_date"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/tv_cuerpo"
            android:textColor="@color/primary_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Remite"
            android:id="@+id/tv_remite"
            android:textColor="@color/primary_color"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img_ubiquo"
            android:layout_toEndOf="@+id/img_ubiquo" />



    </RelativeLayout>


</android.support.v7.widget.CardView>
